.maze-bottom-bar {
  display: flex;
  justify-content: space-between;
}

.maze-bottom-bar__btn {
  border: none;
  color: darkgray;
  padding: 15px 15px 15px 15px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 1em;
  cursor: pointer;
}

.maze-bottom-bar__btn:disabled {
  cursor: not-allowed;
}

.info-container {
  position: absolute;
  background: darkseagreen;
  transition: all 200ms ease-in-out;
  transform: translateY(-100%);
}

